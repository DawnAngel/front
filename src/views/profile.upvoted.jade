doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title= title
        include partials/google.webmastertools.jade
        include partials/main.css.jade
        link(rel="shortcut icon", href="/img/favicon.png")
    body
        include partials/header.jade
        .container
            .row
                .col-xs-3
                    img.img-responsive.img-circle(src=profile.avatar)
                .col-xs-9
                    h1 @
                        span= profile.username
            .row
                .col-xs-12
                    ul.nav.nav-tabs
                        li(role="posted")
                            a(href="/profile/" + profile.username) Posted
                        li.active(role="upvoted")
                            a(href="/profile/" + profile.username + "/upvoted") Upvoted
                        li(role="collections")
                            a(href="/profile/" + profile.username + "/collections") Collections
                        li(role="followers")
                            a(href="/profile/" + profile.username + "/followers") Followers
                        li(role="following")
                            a(href="/profile/" + profile.username + "/following") Following
            .row
                .col-xs-12.talk-list
                    for talk in upvoted
                        include ./partials/talk-list.item.jade

        include partials/footer.jade
        include partials/main.js.jade
        include partials/google.analytics.jade
