doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title techtalks.io
        include ./partials/google.webmastertools.jade
        include ./partials/css.jade
        link(rel="shortcut icon", href="/img/favicon.png")
        link(rel="alternate", type="application/rss+xml", href="http://vps129914.ovh.net/rss/latest", title="RSS 2.0 Latest Talks")
        link(rel="alternate", type="application/rss+xml", href="http://vps129914.ovh.net/rss/popular", title="RSS 2.0 Popular Talks")
    body
        include ./partials/header.jade

        //- Latest talks
        .container.latest-talks
            .row
                .col-xs-12.talk-list
                    h2 Latest talks
                    hr
                each talk in latest
                    include ./partials/talk-list.item.jade
                    hr
        //- Popular talks
        .container
            .row
                .col-xs-12.talk-list
                    h2 Popular talks
                    hr
                each talk in popular
                    include ./partials/talk-list.item.jade
                    hr

        include ./partials/footer.jade
        include ./partials/js.jade
        include ./partials/google.analytics.jade
